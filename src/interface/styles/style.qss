/* style.qss */
QMainWindow {
    background-color: rgb(25, 25, 25);
}

QPushButton {
    color: rgb(190, 190, 190);
    background: transparent;
    border: none;
}

QPushButton:hover {
    background-color: rgba(45.9, 45.9, 45.9, 0.1);
    border-radius: 5px;
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 0.2);
}

